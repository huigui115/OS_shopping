<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="30vp"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="支付设置"
        ohos:text_size="30vp">
    </Text>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:top_margin="20vp"
        ohos:background_element="#FF145B81"
        />
    <Button
        ohos:id="$+id:pay_passord_button"
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:text="支付密码"
        ohos:text_size="20vp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="$graphic:buttonwhite"
        ohos:element_right="$media:arror"
        />
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        />
    <Button
        ohos:id="$+id:change_pay"
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:text="更改默认支付方式"
        ohos:text_size="20vp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="$graphic:buttonwhite"
        ohos:element_right="$media:arror"
        />
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        />

</DirectionalLayout>