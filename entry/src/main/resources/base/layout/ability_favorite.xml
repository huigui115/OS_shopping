<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="190vp"
    ohos:width="match_parent"
    ohos:background_element="#fff">
    <DependentLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:background_element="#CC0000"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text="商品收藏"
            ohos:text_alignment="center"
            ohos:text_color="#FFE9E6E6"
            ohos:text_size="20fp"/>

        <Button
            ohos:id="$+id:btn_fav_backup"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:left_margin="5vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_color="#FFE9E6E6"
            ohos:text_size="20fp"/>

        <Button
            ohos:id="$+id:btn_delete_all"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:right_margin="5vp"
            ohos:text="清空"
            ohos:text_alignment="center"
            ohos:text_color="#FFE9E6E6"
            ohos:text_size="20fp"/>
    </DependentLayout>

</DirectionalLayout>
