<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFFFFFFF"
    ohos:padding="30vp">
    <DependentLayout
        ohos:height="45vp"
        ohos:width="match_parent">
        <Button
            ohos:id="$+id:btn_backup"
            ohos:height="match_content"
            ohos:width="53vp"
            ohos:text="返回"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            ohos:top_margin="12vp"
            ohos:background_element="$graphic:button">
        </Button>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text_alignment="center"
            ohos:text_color="#FF103ECA"
            ohos:text="填写订单"
            ohos:text_size="35vp"
            />
    </DependentLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:padding="20vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人姓名"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"/>
        <TextField
            ohos:id="$+id:tf_name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF34343C"
            ohos:text_size="18vp"
            ohos:hint="请填写收货人姓名"
            ohos:text_alignment="bottom"
            ohos:top_margin="8vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人电话号码"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <TextField
            ohos:id="$+id:tf_phone"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF34343C"
            ohos:text_size="18vp"
            ohos:hint="请填写收货人手机号码"
            ohos:text_alignment="bottom"
            ohos:top_margin="8vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货地址"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <TextField
            ohos:id="$+id:tf_address"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF34343C"
            ohos:text_size="18vp"
            ohos:hint="请填写收货地址"
            ohos:text_alignment="bottom"
            ohos:top_margin="8vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="已选商品"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <ListContainer
            ohos:id="$+id:listContainer_order"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:top_margin="10vp"
            ohos:min_height="260vp"
            ohos:background_element="#FFFFFFFF"
            ohos:weight="1" />
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="总价(￥）"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <Text
            ohos:id="$+id:t_sum"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="0.0"
            ohos:text_color="#FF103ECA"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Button
            ohos:id="$+id:settlement_button_order"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:text="提交"
            ohos:text_alignment="center"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="22fp"
            ohos:top_margin="25vp"
            ohos:background_element="$graphic:button"
            ohos:bottom_margin="20vp"/>
    </DirectionalLayout>
</DirectionalLayout>