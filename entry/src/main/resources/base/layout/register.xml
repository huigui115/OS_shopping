<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFFFFFFF"
    ohos:padding="30vp"
    >
    <DependentLayout
        ohos:height="50vp"
        ohos:width="match_parent">
        <Button
            ohos:id="$+id:reg_back"
            ohos:height="match_content"
            ohos:width="53vp"
            ohos:text="返回"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            ohos:top_margin="12vp"
            ohos:background_element="$graphic:button">
        </Button>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text_alignment="center"
            ohos:text="用户注册"
            ohos:text_size="40vp"
            />
    </DependentLayout>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="用户名"
        ohos:text_size="25vp"
        ohos:top_margin="30vp"
        />
    <TextField
        ohos:id="$+id:reg_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#FF34343C"
        ohos:text_size="20vp"
        ohos:hint="请输入用户名"
        ohos:text=""
        ohos:text_input_type="pattern_text"
        ohos:text_alignment="bottom"
        ohos:top_margin="5vp">
    </TextField>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF34343C"
        ohos:top_margin="5vp">
    </Component>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="密码"
        ohos:text_size="25vp"
        ohos:top_margin="15vp"
        />
    <TextField
        ohos:id="$+id:reg_password1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#FF34343C"
        ohos:text_size="20vp"
        ohos:hint="请输入密码"
        ohos:text_input_type="pattern_password"
        ohos:text_alignment="bottom"
        ohos:top_margin="5vp">
    </TextField>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF34343C"
        ohos:top_margin="5vp">
    </Component>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="确认密码"
        ohos:text_size="25vp"
        ohos:top_margin="15vp"
        />
    <TextField
        ohos:id="$+id:reg_password2"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#FF34343C"
        ohos:text_size="20vp"
        ohos:hint="请确认输入密码"
        ohos:text_input_type="pattern_password"
        ohos:text_alignment="bottom"
        ohos:top_margin="5vp">
    </TextField>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF34343C"
        ohos:top_margin="5vp">
    </Component>
    <DependentLayout
        ohos:height="30vp"
        ohos:width="match_parent">
        <Checkbox
            ohos:id="$+id:reg_agree"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="已阅读并同意"
            ohos:top_margin="15vp"
            ohos:text_size="17vp"
            ohos:check_element="$graphic:checkbox_check_element">
        </Checkbox>
        <Button
            ohos:id="$+id:reg_agreement"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="《张三商城使用协议》"
            ohos:text_color="#007CFD"
            ohos:text_size="17vp"
            ohos:text_alignment="center"
            ohos:left_margin="120vp"
            ohos:top_margin="15vp"
            ohos:background_element="$graphic:buttonwhite">
        </Button>
    </DependentLayout>
    <Button
        ohos:id="$+id:reg_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#FFFFFFFF"
        ohos:text="注   册"
        ohos:text_size="30vp"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:button"
        ohos:top_margin="20vp">
    </Button>


</DirectionalLayout>