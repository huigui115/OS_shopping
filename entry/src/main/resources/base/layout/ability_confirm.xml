<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="30vp"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:back_confirmid"
        ohos:height="30vp"
        ohos:width="50vp"
        ohos:background_element="$graphic:button"
        ohos:text="返回"
        ohos:text_size="15vp"
        ohos:text_color="$color:background"
        ohos:bottom_margin="20vp"
        />
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="身份验证"
        ohos:text_size="30vp">
    </Text>
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:top_margin="20vp"
        ohos:background_element="#FF145B81"
        />
    <Text
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:text="用户名"
        ohos:text_size="20vp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="$graphic:buttonwhite"
        />
    <Text
        ohos:id="$+id:username_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:hint="username"
        ohos:text_size="20vp"
        />
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        />
    <Text
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:text="密码"
        ohos:text_size="20vp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="$graphic:buttonwhite"
        />
    <TextField
        ohos:id="$+id:pwd_input"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:hint="输入密码"
        ohos:text_size="20vp"
        />
    <Component
        ohos:width="match_parent"
        ohos:height="1fp"
        ohos:background_element="#FF145B81"
        />
    <Button
        ohos:id="$+id:confirm_idconfirm"
        ohos:height="30vp"
        ohos:width="100vp"
        ohos:top_margin="50vp"
        ohos:text_size="15vp"
        ohos:text="确定"
        ohos:background_element="$graphic:button"
        />

</DirectionalLayout>