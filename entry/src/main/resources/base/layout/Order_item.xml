<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="120vp"
    ohos:width="match_parent"
    ohos:background_element="white"
    ohos:orientation="horizontal"
    ohos:bottom_margin="1vp"
    ohos:padding="5vp">
    <Image
        ohos:id="$+id:product_iv_order"
        ohos:height="100vp"
        ohos:width="100vp"
        ohos:background_element="$media:product_iv"

        ohos:vertical_center="true"/>
    <DependentLayout
        ohos:height="110vp"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:background_element="#fff">
        <Text
            ohos:id="$+id:name_tv_order"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_top="$id:product_iv_shopping_cart"
            ohos:end_of="$id:product_iv_shopping_cart"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:right_margin="8vp"
            ohos:text="华为笔记本电脑MateBook 13 2021款13英寸轻薄全面屏触控超极本商务学生办公手提电脑 新i7 16G 1TB定制 MX450独显 灰色 标配 预装Win10+Office软件"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"
            />
        <DirectionalLayout
            ohos:id="$+id:dl_select_order"
            ohos:height="25vp"
            ohos:width="match_content"
            ohos:align_left="$id:name_tv_shopping_cart"
            ohos:align_parent_bottom="true"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:bottom_margin="4vp"
                ohos:layout_alignment="left"
                ohos:text="数量："
                ohos:text_alignment="center"
                ohos:text_color="#FF000000"
                ohos:text_size="18fp"
                ohos:top_margin="2vp"/>
            <Text
                ohos:id="$+id:count_order"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:bottom_margin="3vp"
                ohos:layout_alignment="center"
                ohos:left_margin="15vp"
                ohos:right_margin="15vp"
                ohos:text="1"
                ohos:text_alignment="center"
                ohos:text_color="#FF103ECA"
                ohos:text_size="18fp"
                ohos:top_margin="4vp"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:bottom_margin="3vp"
                ohos:layout_alignment="right"
                ohos:text="件"
                ohos:text_alignment="center"
                ohos:text_color="#FF000000"
                ohos:text_size="18fp"
                ohos:top_margin="3vp"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_left="$id:name_tv_shopping_cart"
            ohos:align_parent_bottom="true"
            ohos:orientation="horizontal"
            ohos:bottom_margin="30vp">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="小计："
                ohos:text_color="#FF000000"
                ohos:text_size="18fp"/>
            <Text
                ohos:id="$+id:price_tv_order"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="8800.8"
                ohos:text_color="#FF103ECA"
                ohos:text_size="18fp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="8vp"
                ohos:text="元"
                ohos:text_alignment="center"
                ohos:text_color="#FF000000"
                ohos:text_size="18fp"/>
        </DirectionalLayout>
    </DependentLayout>
</DirectionalLayout>