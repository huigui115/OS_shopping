<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="30vp">
    <DependentLayout
        ohos:height="45vp"
        ohos:width="match_parent">
        <Button
            ohos:id="$+id:btn_backup"
            ohos:height="match_content"
            ohos:width="53vp"
            ohos:text="返回"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            ohos:text_alignment="center"
            ohos:top_margin="12vp"
            ohos:background_element="$graphic:button">
        </Button>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text_alignment="center"
            ohos:text_color="#FF103ECA"
            ohos:text="订单详情"
            ohos:text_size="35vp"
            />
    </DependentLayout>
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="20vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人姓名"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="10vp"/>
        <Text
            ohos:id="$+id:t_name1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"
            ohos:text="张三"
            ohos:top_margin="5vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货人手机"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <Text
            ohos:id="$+id:t_phone1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"
            ohos:text="13312345678"
            ohos:top_margin="5vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="收货地址"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <Text
            ohos:id="$+id:t_address1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"
            ohos:text="北京天安门"
            ohos:top_margin="5vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="已选商品"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <ListContainer
            ohos:id="$+id:listContainer_order_details"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:left_margin="10vp"
            ohos:padding="1vp"
            ohos:min_height="260vp"
            ohos:background_element="#FFFFFFFF"
            ohos:weight="1"
            />
        <Component
            ohos:height="1px"
            ohos:width="match_parent"
            ohos:background_element="black"
            ohos:top_margin="5vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="总价(￥）"
            ohos:text_color="#FF103ECA"
            ohos:text_size="16fp"
            ohos:top_margin="20vp"/>
        <Text
            ohos:id="$+id:t_sum_order"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="0.0"
            ohos:text_color="#FF103ECA"
            ohos:text_size="18fp"
            ohos:top_margin="5vp"/>
        <Component
            ohos:width="match_parent"
            ohos:height="1fp"
            ohos:background_element="#FF000000"
            ohos:top_margin="5vp">
        </Component>
    </DirectionalLayout>
</DirectionalLayout>